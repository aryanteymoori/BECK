@page
@using _0_Framework.Application;
@model ServiceHost.Pages.CheckOutModel
@{
}
<section class="page-title-area bg-image ptb--80" data-bg-image="Them/files/img/bg/page_title_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="page-title">سبد خرید</h1>
                <ul class="breadcrumb">
                    <li class="current"><span>سبد خرید</span></li>
                    <li><a asp-page="Index" style="margin-right: 10px;">صفحه اصلی</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb area End -->
<!-- Main Content Wrapper Start -->
<div class="main-content-wrapper">
    <div class="page-content-inner ptb--80 pt-md--40 pb-md--60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mb-md--50">
                    <form class="cart-form" action="#">
                        <div class="row g-0">
                            <div class="col-12">
                                <div class="table-content table-responsive">
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th>عکس</th>
                                                <th class="text-start">محصول</th>
                                                <th>قیمت واحد</th>
                                                <th>تعداد</th>
                                                <th>مبلغ کل بدون تخفیف</th>
                                                <th>درصد تخفیف</th>
                                                <th>مبلغ کل تفیف</th>
                                                <th>مبلغ پس از تفیف</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model.Cart.CartItems)
                                            {
                                                <tr>
                                                    <td class="product-thumbnail text-start">
                                                        <img src="~/Pictures/@item.Picture" alt="Product Thumnail">
                                                    </td>
                                                    <td class="product-name text-start wide-column">
                                                        <h3>
                                                            <a>@item.Name</a>
                                                        </h3>
                                                    </td>
                                                    <td class="product-price">
                                                        <span class="product-price-wrapper">
                                                            <span class="money">@item.UnitPrice</span>
                                                        </span>
                                                    </td>
                                                    <td class="product-quantity">
                                                        <div class="product-price-wrapper">
                                                            <span>@item.Count عدد</span>
                                                        </div>
                                                    </td>
                                                    <td class="product-total-price">
                                                        <span class="product-price-wrapper">
                                                            <span class="money">@((item.DoubleUnitPrice * item.Count).ToMoney()) تومان</span>
                                                        </span>
                                                    </td>
                                                    <td class="product-total-price">
                                                        <span class="product-price-wrapper">
                                                            <span class="money">% @item.DiscountRate</span>
                                                        </span>
                                                    </td>
                                                    <td class="product-total-price">
                                                        <span class="product-price-wrapper">
                                                            <span class="money">@((item.DiscountAmount).ToMoney()) تومان</span>
                                                        </span>
                                                    </td>
                                                    <td class="product-total-price">
                                                        <span class="product-price-wrapper">
                                                            <span class="money">@((item.ItemPayAmount).ToMoney()) تومان</span>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                @* <div class="col-lg-4">
                    <div class="cart-collaterals">
                        <a href="" class="btn btn-size-md btn-shape-square btn-fullwidth">
                            ثبت سفارش
                        </a>
                    </div>
                </div> *@
            </div>
        </div>
        @******************@
        <div class="col-lg-4 mt-5">
            <div class="cart-collaterals">
                <div class="cart-totals">
                    <h5 class="font-size-14 font-bold mb--15">خلاصه فاکتور</h5>
                    <div class="cart-calculator">
                        <div class="cart-calculator__item">
                            <div class="cart-calculator__item--head">
                                <span>مبلغ نهایی</span>
                            </div>
                            <div class="cart-calculator__item--value">
                                <span>@((Model.Cart.TotalAmount).ToMoney()) تومان</span>
                            </div>
                        </div>
                        <div class="cart-calculator__item">
                            <div class="cart-calculator__item--head">
                                <span>مبلغ تخفیف</span>
                            </div>
                            <div class="cart-calculator__item--value">
                                <span>
                                    @Model.Cart.DiscountAmount.ToMoney() تومان
                                </span>
                            </div>
                        </div>
                        <div class="cart-calculator__item order-total">
                            <div class="cart-calculator__item--head">
                                <span>مبلغ قابل پرداخت</span>
                            </div>
                            <div class="cart-calculator__item--value">
                                <span class="product-price-wrapper">
                                    <span class="money">@Model.Cart.PayAmount.ToMoney() تومان</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @******************@
        <div class="col-lg-3 mt-5">
            <div class="cart-collaterals">
                <a asp-page-handler="Pay" class="btn btn-size-md btn-shape-square btn-fullwidth">
                    ثبت سفارش
                </a>
            </div>
        </div>
        
    </div>
</div>
