                                    <a href="#">وابسته</a>
                                    <a href="#">فتوشاپ</a>
                                    <a href="#">اسپورت</a>
                                    <a href="#">قالب</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        @await Component.InvokeAsync("MoblieMenu")

        @await Component.InvokeAsync("CartItems")

        <div class="searchform__popup" id="searchForm">
            <a href="#" class="btn-close"><i class="la la-remove"></i></a>
            <div class="searchform__body">
                <p>شروع به تایپ کنید و اینتر را برای جستجو فشار دهید</p>
                <form class="searchform" method="get" asp-page="Search">
                    <input type="text" name="value" id="value" class="searchform__input"
                           placeholder="جستجو در کل فروشگاه...">
                    <button type="submit" class="searchform__submit"><i class="la la-search"></i></button>
                </form>
            </div>
        </div>
        <div class="global-overlay"></div>
        <a class="scroll-to-top" href=""><i class="la la-angle-double-up"></i></a>
    </div>

    <script src="~/Them/files/js/vendor-1.js"></script>
    <script src="~/Them/files/js/main-1.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Them/Custom/jquery.cookie.js"></script>
    <script src="~/Them/Custom/JsPresentation.js"></script>
    <script>
        $(document).ready(function () {
            updateCart();
        })
    </script>
</body>

</html>