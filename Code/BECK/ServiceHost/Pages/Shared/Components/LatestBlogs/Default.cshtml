@model List<_01_BECKQuery.Contract.Article.ArticleQueryModel>

<section class="blog-area mb--70 mb-md--50">
    <div class="container">
        <div class="row mb--35 mb-md--23">
            <div class="col-12 text-center">
                <h2>آخرین مقالات</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="element-carousel" data-slick-options='{
                        "spaceBetween": 30,
                        "slidesToShow": 3,
                        "slidesToScroll": 1
                    }' data-slick-responsive='[
                        {"breakpoint": 992, "settings": {"slidesToShow": 2}},
                        {"breakpoint": 768, "settings": {"slidesToShow": 1}}
                    ]'>
                    @foreach(var item in Model)
                    {
                        <div class="item">
                            <article class="blog">
                                <div class="blog__inner">
                                    <div class="blog__media">
                                        <figure class="image">
                                            <img src="~/Pictures/@item.Picture" alt="@item.PictureAlt"
                                                    title="@item.PictureTitle" class="w-100">
                                            <a asp-page="Article" asp-route-slug="@item.Slug" class="item-overlay"></a>
                                        </figure>
                                    </div>
                                    <div class="blog__info">
                                        <h2 class="blog__title">
                                            <a asp-page="Article" asp-route-slug="@item.Slug">
                                                @item.Title
                                            </a>
                                        </h2>
                                    </div>
                                </div>
                            </article>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>