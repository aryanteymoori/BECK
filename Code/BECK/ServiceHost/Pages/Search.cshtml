@page
@model ServiceHost.Pages.SearchModel
@{
}
<section class="page-title-area bg-image ptb--80" data-bg-image="Them/files/img/bg/page_title_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="page-title"> جستجو درباره: @Model.SearchText</h1>
                <ul class="breadcrumb">
                    <li><a asp-page="Index" style="margin-right: 10px;">صفحه اصلی</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="main-content-wrapper">
    <div class="page-content-inner pt--80 pt-md--60">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="element-carousel product-slider slick-vertical-center" style="direction: ltr" data-slick-options='{
                            "spaceBetween": 30,
                            "slidesToShow": 3,
                            "slidesToScroll": 1,
                            "arrows": true,
                            "prevArrow": {"buttonClass": "slick-btn slick-prev", "iconClass": "la la-angle-double-right" },
                            "nextArrow": {"buttonClass": "slick-btn slick-next", "iconClass": "la la-angle-double-left" }
                        }'
                         data-slick-responsive='[
                            {"breakpoint":991, "settings": {
                                "slidesToShow": 2
                            }},
                            {"breakpoint":575, "settings": {
                                "slidesToShow": 1
                            }}
                        ]'>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <h2>نتیجه جستجو برای: @Model.SearchText</h2>
            <div class="row">
                <div class="col-12">
                    <div class="tab-content" id="product-tab-content">
                        <div class="tab-pane fade show active" id="new-all" role="tabpanel"
                             aria-labelledby="new-all-tab">
                            <div class="row">
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col-lg-3 col-sm-6 mb--45">
                                        <div class="ft-product HTfadeInUp">
                                            <div class="product-inner">
                                                <div class="product-image">
                                                    <figure class="product-image--holder">
                                                        <img src="~/Pictures/@product.Picture"
                                                             alt="@product.PictureAlt"
                                                             title="@product.PictureTitle">
                                                    </figure>
                                                    <a asp-page="Product" asp-route-slug="@product.Slug" class="product-overlay"></a>
                                                </div>
                                                <div class="product-info">
                                                    <div class="product-category">
                                                        <a asp-page="ProductCategory"
                                                           asp-route-slug="@product.CategoryName">@product.CategoryName</a>
                                                    </div>
                                                    <h3 class="product-title">
                                                        <a asp-page="Product" asp-route-slug="@product.Slug">
                                                            @product.Name
                                                        </a>
                                                    </h3>
                                                    <div class="product-info-bottom">
                                                        <div class="product-price-wrapper">
                                                            @if (product.HasDiscount)
                                                            {
                                                                <span class="money text-muted" style="text-decoration-line: line-through; ">@product.UnitPrice تومان</span>
                                                                <span class="money">@product.PriceWithDiscount تومان</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="money">@product.UnitPrice تومان</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>