@page
@model ServiceHost.Areas.Administration.Pages.Blog.ArticleCategory.EditArticleCategoryModel
@{
	string message = Model.Message;
}
<div>
	@if (!string.IsNullOrWhiteSpace(message))
	{
		<p class="bg-danger text-dark mx-auto text-center p-4">@message</p>
	}
</div>
<form asp-action="post"
	  enctype="multipart/form-data">
	<div class="card shadow">
		<div class="card-header">
			<h2 class="mb-0">افزودن دسته جدید</h2>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">نام دسته بندی</label>
						<input type="text" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.Name">
						<span class="text-danger" asp-validation-for="EditArticleCategory.Name"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">Slug</label>
						<input type="text" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.Slug">
						<span class="text-danger" asp-validation-for="EditArticleCategory.Slug"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">عکس</label>
						<input type="file" accept="image/*" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.Picture">
						<span class="text-danger" asp-validation-for="EditArticleCategory.Picture"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">آدرس Canonical</label>
						<input type="text" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.CanonicalAddress">
						@* <span class="text-danger" asp-validation-for="EditArticleCategory.CanonicalAddress"></span> *@
					</div>
				</div>
				<div class="col-md-5">
					<div class="form-group">
						<label class="form-label">توضیح متا</label>
						<input type="text" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.MetaDescription">
						<span class="text-danger" asp-validation-for="EditArticleCategory.MetaDescription"></span>
					</div>
				</div>
				<div class="col-md-5">
					<div class="form-group">
						<label class="form-label">کلمات کلیدی</label>
						<input type="text" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.Keywords">
						<span class="text-danger" asp-validation-for="EditArticleCategory.Keywords"></span>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						<label class="form-label">ترتیب نمایش</label>
						<input type="number" value="0" class="form-control is-valid state-valid"
							   asp-for="EditArticleCategory.ShowOrder">
						@* <span class="text-danger" asp-validation-for="CreateArticleCategory.ShowOrder"></span> *@
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label class="form-label">توضیحات</label>
						<textarea class="form-control" asp-for="EditArticleCategory.Description" rows="4"></textarea>
					</div>
				</div>
			</div>
		</div>
	</div>
	<input type="hidden" asp-for="EditArticleCategory.Id" value="@Model.EditArticleCategory.Id" />
	<input type="submit" class="btn btn-success" value="ویرایش" />
</form>