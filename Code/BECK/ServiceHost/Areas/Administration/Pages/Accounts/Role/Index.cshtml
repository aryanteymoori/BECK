@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Role.IndexModel
@{
}
<a class="btn btn-success" asp-page="CreateRole">ایجاد نقش جدید</a>
<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0">لیست نقش ها</h2>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table id="example"
				   class="table table-striped table-bordered w-100 text-nowrap">
				<thead>
					<tr>
						<th class="wd-15p">#</th>
						<th class="wd-20p">نام نقش</th>
						<th class="wd-20p">تاریخ ایجاد</th>
						<th class="wd-20p">عملیات</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Roles)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Name</td>
							<td>@item.CreationDate</td>
							<td>
								<a class="btn btn-sm btn-primary" asp-page="EditRole"
								   asp-route-Id="@item.Id">ویرایش</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
@section Scripts {
	<script>
		$(function (e) {
			$('#example').DataTable();

			var table = $('#example1').DataTable();
			$('button').click(function () {
				var data = table.$('input, select').serialize();
				alert(
					"The following data would have been submitted to the server: \n\n" +
					data.substr(0, 120) + '...'
				);
				return false;
			});
			$('#example2').DataTable({
				"scrollY": "200px",
				"scrollCollapse": true,
				"paging": false
			});
		});
	</script>
}